{
  "productName": "Simple Bistro POS",
  "version": "0.1.0",
  "identifier": "com.simplebistro.pos",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:4200",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/simple-bistro-pos/browser"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "security": {
    "csp": null
  },
  "app": {
    "windows": [
      {
        "title": "Simple Bistro POS",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "capabilities": []
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:bistro.db"]
    }
  }
}
