{
  "productName": "Simple Simple POS",
  "version": "0.1.0",
  "identifier": "com.simple.pos",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:4200",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/simple-pos/browser"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "security": {
    "csp": null
  },
  "app": {
    "windows": [
      {
        "title": "Simple Simple POS",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "capabilities": []
    }
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://github.com/ramiz4/simple-pos/releases/latest/download/latest.json"],
      "pubkey": "YOUR_PUBLIC_KEY_HERE_RUN_PNPM_TAURI_SIGNER_GENERATE"
    },
    "sql": {
      "preload": ["sqlite:simple-pos.db"]
    }
  }
}
