{
  "productName": "Simple POS",
  "version": "1.16.0",
  "identifier": "com.simple.pos",
  "build": {
    "beforeDevCommand": {
      "script": "pnpm exec nx serve pos",
      "cwd": "../../..",
      "wait": false
    },
    "devUrl": "http://localhost:4200",
    "beforeBuildCommand": {
      "script": "pnpm nx build pos",
      "cwd": "../../.."
    },
    "frontendDist": "../../../dist/apps/pos/browser"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Simple POS",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "capabilities": ["default"]
    }
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://github.com/ramiz4/simple-pos/releases/latest/download/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE3NEM1QzdGNDEzMjUwNDIKUldSQ1VESkJmMXhNRjkvZmpWMmhSc1FGY0xQTGpTWjNKZ3gyUG85WVY5RlVNc2RSSURpMm9RNzQK"
    },
    "sql": {
      "preload": ["sqlite:simple-pos.db"]
    }
  }
}
