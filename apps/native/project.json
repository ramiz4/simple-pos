{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "native",
  "projectType": "application",
  "tags": ["scope:native", "type:app"],
  "sourceRoot": "apps/native/src-tauri/src",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tauri dev",
        "cwd": "apps/native"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tauri build --bundles app",
        "cwd": "apps/native"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo test",
        "cwd": "apps/native/src-tauri",
        "forwardAllArgs": false
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy -- -D warnings",
        "cwd": "apps/native/src-tauri",
        "forwardAllArgs": false
      }
    }
  }
}
